// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  password  String
  meals     Meal[]
  logs      MealLog[]
  measurements Measurement[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Meal {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @db.ObjectId
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String     // e.g., "Barley porridge", "Banana"
  calories  Int
  unit      String     // Number, Gram, Liter, etc.
  qty       Int
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
}

model MealLog {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @db.ObjectId
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime
  type      String     // Breakfast, Lunch, Dinner, Supper
  mealName  String     // e.g., "Barley porridge"
  qty       Int
  calories  Int
  notes     String?    // Optional notes
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId, date])
}

model Measurement {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  userId      String     @db.ObjectId
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  date        DateTime
  height      Float      // in cm or inches
  heightUnit  String     // "cm" or "inches"
  weight      Float      // in kg
  notes       String?    // Optional notes
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([userId, date])
}
